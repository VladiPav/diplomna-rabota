generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Category {
  id          String       @id @default(uuid()) @db.VarChar(256)
  name        String
  collections Collection[]
  elements    Element[]

  @@map("category")
}

model Collection {
  id         String    @id @default(uuid()) @db.VarChar(256)
  name       String
  user       User      @relation("collections", fields: [userId], references: [id])
  userId     String
  category   Category  @relation(fields: [categoryId], references: [id])
  categoryId String
  elements   Element[]

  @@map("collection")
}

model Element {
  id          String       @id @default(uuid()) @db.VarChar(256)
  name        String
  category    Category     @relation(fields: [categoryId], references: [id])
  categoryId  String       @map("category_id")
  collections Collection[]

  @@map("element")
}

model User {
  id          String         @id @default(uuid()) @db.VarChar(256)
  firebaseId  String         @unique @map("firebase_id")
  email       String         @unique
  username    String         @unique
  followers   Relationship[] @relation("followed")
  following   Relationship[] @relation("follower")
  collections Collection[]   @relation("collections")

  @@map("user")
}

model Relationship {
  id         String @id @default(uuid()) @db.VarChar(256)
  follower   User   @relation("follower", fields: [followerId], references: [id])
  followerId String @map("follower_id")
  followed   User   @relation("followed", fields: [followedId], references: [id])
  followedId String @map("followed_id")

  @@map("relationship")
}
