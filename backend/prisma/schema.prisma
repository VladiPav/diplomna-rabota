generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Category {
  id          String       @id @default(uuid()) @db.VarChar(256)
  name        String
  collections Collection[]
  elements    Element[]

  @@map("category")
}

model Collection {
  id                 String              @id @default(uuid()) @db.VarChar(256)
  name               String
  user               User                @relation("collections", fields: [userId], references: [id])
  userId             String
  category           Category            @relation(fields: [categoryId], references: [id])
  categoryId         String
  collectionElements CollectionElement[]

  @@map("collection")
}

model Element {
  id                 String              @id @default(uuid()) @db.VarChar(256)
  name               String
  category           Category            @relation(fields: [categoryId], references: [id])
  categoryId         String              @map("category_id")
  collectionElements CollectionElement[] @relation("elements")

  @@map("element")
}

model CollectionElement {
  collection   Collection @relation(fields: [collectionId], references: [id])
  collectionId String     @map("collection_id")
  element      Element    @relation("elements", fields: [elementId], references: [id])
  elementId    String     @map("element_id")

  position String

  @@unique([collectionId, elementId], name: "id")
  @@map("collection_element")
}

model User {
  id               String         @id @default(uuid()) @db.VarChar(256)
  firebaseId       String         @unique @map("firebase_id")
  email            String         @unique
  username         String         @unique
  profileImagePath String?
  followers        Relationship[] @relation("followed")
  following        Relationship[] @relation("follower")
  collections      Collection[]   @relation("collections")

  @@map("user")
}

model Relationship {
  id         String @id @default(uuid()) @db.VarChar(256)
  follower   User   @relation("follower", fields: [followerId], references: [id])
  followerId String @map("follower_id")
  followed   User   @relation("followed", fields: [followedId], references: [id])
  followedId String @map("followed_id")

  @@map("relationship")
}
