generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id          String       @id @default(uuid()) @db.VarChar(256)
  collections Collection[]
  elements    Element[]
}

model Collection {
  id                 String              @id @default(uuid()) @db.VarChar(256)
  name               String
  user               User                @relation("collections", fields: [userId], references: [id])
  userId             String
  category           Category            @relation(fields: [categoryId], references: [id])
  categoryId         String
  collectionElements CollectionElement[]

  @@map("collection")
}

model Element {
  id         String   @id @default(uuid()) @db.VarChar(256)
  name       String
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String

  collectionElements CollectionElement[]

  @@map("element")
}

model CollectionElement {
  id           String     @id @default(uuid()) @db.VarChar(256)
  collection   Collection @relation(fields: [collectionId], references: [id])
  collectionId String
  element      Element    @relation(fields: [elementId], references: [id])
  elementId    String

  @@map("collection_element")
}

model User {
  id          String         @id @default(uuid()) @db.VarChar(256)
  email       String         @unique
  username    String         @unique
  followers   Relationship[] @relation("followed")
  following   Relationship[] @relation("follower")
  collections Collection[]   @relation("collections")

  @@map("user")
}

model Relationship {
  id         String @id @default(uuid()) @db.VarChar(256)
  follower   User   @relation("follower", fields: [followerId], references: [id])
  followerId String
  followed   User   @relation("followed", fields: [followedId], references: [id])
  followedId String

  @@map("relationship")
}
